<center> <h1>Edit Event</h1>

<%= form_for @event, class: "form-horizontal" do |f| %>

<% if @event.errors.any? %>
                <div class="alert alert-danger">
                    <div id="error_explanation">
                        <p> <%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</p>   
                            <ul>
                                <% @event.errors.full_messages.each do |message| %>
                                    <li><%= message %></li>              
                                <% end %>
                            </ul>
                    </div>
                </div>
              <% end %>

<div class="form-group">
<%= f.label :event_name, "Event name", class: 'col-md4 control-label' %>
<div class="col-md-6">
  <%= f.text_field :event_name, class: 'form-control' %>
 </div>
  </div>

<div class="form-group">
<%= f.label :game_played, "Game", class: 'col-md4 control-label' %>
<div class="col-md-6">
  <%= f.text_field :game_played, class: 'form-control' %>
 </div>
  </div>

<div class="form-group">
<%= f.label :description, "Description", class: 'col-md4 control-label' %>
<div class="col-md-6">
  <%= f.text_field :description, class: 'form-control' %>
 </div>
  </div>

  <div class="form-group">
<%= f.label :duration, "Duration", class: 'col-md4 control-label' %>
<div class="col-md-6">
  <%= f.number_field :duration, class: 'form-control' %>
 </div>
  </div>

    <div class="form-group">
<%= f.label :max_participant, "Max participant", class: 'col-md4 control-label' %>
<div class="col-md-6">
  <%= f.number_field :max_participant, class: 'form-control' %>
 </div>
  </div>

  <div class="form-group">
<%= f.label :city, "City", class: 'col-md4 control-label' %>
<div class="col-md-6">
  <%= f.text_field :city, class: 'form-control' %>
 </div>
  </div>

  <div class="form-group">
<%= f.label :event_date, "Starting Date", class: 'col-md4 control-label' %>
<div class="col-md-6">
  <%= f.datetime_field :event_date, class: 'form-control' %>
 </div>
  </div>

        <div class="actions mt-5 mb-4">
                <%= f.submit "Edit your Event!", class:"btn btn-success text-uppercase" %>
        </div>
        <div class="actions mt-5 mb-4">
                <%= link_to 'Back', events_path , class:"btn btn-md btn-success text-uppercase"  %>
        </div>
  <% end %>

  </center>